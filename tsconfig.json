{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "charset": "utf8",
    "pretty": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "inlineSourceMap": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "lib": [
      "es5",
      
      "es2015.core",
      "es2015.promise",
      "es2015.collection",
      "es2016.array.include",
      "es2017.string",
      "es2017.object",
      "es2018.promise",
      
      "es2015.reflect",
      "es2017.typedarrays"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/interface/*"
  ]
}
